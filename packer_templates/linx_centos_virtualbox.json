{
  "variables": {
    "version": "1908",
    "linx_user": "linxadmin",
    "absolut_path": "/home/local/LATAM-EIG/elsilva/gdrive/linx_deploy",
    "absolut_path_vm": "/home/local/LATAM-EIG/elsilva/Downloads/"
  },

  "builders": [
    {
      "vm_name": "linx-centos-{{ user `version` }}",
      "iso_urls": [
        "iso/CentOS-7-x86_64-Minimal-{{ user `version` }}.iso",
        "http://ftp.unicamp.br/pub/centos/7.7.{{ user `version` }}/isos/x86_64/CentOS-7-x86_64-Minimal-{{ user `version` }}.iso"
      ],
      "iso_checksum_url": "file:{{ user `absolut_path` }}/iso/CentOS-7-x86_64-Minimal-{{ user `version` }}_sha256sum.txt",
      "iso_checksum_type": "file",
      "iso_target_path": "{{ user `absolut_path` }}/iso/CentOS-7-x86_64-Minimal-{{ user `version` }}.iso",
      "http_directory": "http",
      "output_directory": "{{ user `absolut_path_vm` }}/linx-centos-{{ user `version` }}",
      "boot_command": [
        "<esc>",
        "<wait>",        
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/linx_ks.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 10240,
      "memory": 512,
      "cpus": 1,
      "guest_os_type": "Linux_64",
      "shutdown_command": "echo 'halt -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "type": "virtualbox-iso",
      "ssh_username": "{{ user `linx_user` }}",
      "ssh_private_key_file": "files/linx_key",
      "ssh_port": 22,
      "ssh_timeout": "90m",
      "headless": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "LINXUSER={{ user `linx_user` }}"
      ],
      "scripts": [
        "scripts/builder_tools.sh",
        "scripts/clean.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "boxes/centos-7.7.{{ user `version` }}-x86_64-{{.Provider}}.box"
    }
  ]
}
